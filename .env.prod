# Production Environment Variables
# IMPORTANT: Change all these values for production!

# Database Configuration
DB_ROOT_PASSWORD=your_super_secure_root_password_here
DB_USER=food_surplus_user
DB_PASSWORD=your_secure_db_password_here

# Application Security
JWT_SECRET_KEY=your_very_long_jwt_secret_key_at_least_32_characters
SECRET_KEY=your_flask_secret_key_minimum_32_characters_long

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend API URL (for build-time configuration)
FRONTEND_API_URL=https://yourdomain.com/api

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# Email Configuration (if using email notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# Production Domain
DOMAIN=yourdomain.com